<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fragment_mysystemsettings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
            style="@style/StyleToolbar"
            android:layout_marginBottom="-8dp"/>

        <!-- Content -->
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/linearlayout_custom_bg_rec"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_marginTop="10dp"-->

                <ImageButton
                    android:id="@+id/password_btn"
                    android:layout_width="262dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/btn_imageview_shape"
                    android:src="@mipmap/systen_password"/>

                <ImageButton
                    android:id="@+id/gcm_btn"
                    android:layout_width="262dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/btn_imageview_shape"
                    android:src="@mipmap/systen_gcm"/>

                <ImageButton
                    android:id="@+id/gcm_send_btn"
                    android:visibility="gone"
                    android:layout_width="262dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/btn_imageview_shape"
                    android:src="@mipmap/systen_gcm_send"/>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
</FrameLayout>