<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="#CAF644" android:startColor="#CAF644"/>

            <stroke android:width="0.1dip" android:color="#CCCCCC"/>

            <corners android:radius="3dp"/>

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="0" android:endColor="#CAF644" android:startColor="#CAF644"/>

            <stroke android:width="0.1dip" android:color="#CCCCCC"/>

            <corners android:radius="3dp"/>

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <!-- 渐变 -->
            <gradient android:angle="0" android:endColor="#FFFFFF" android:startColor="#FFFFFF"/>
            <!-- 描边 -->
            <stroke android:width="2dip" android:color="#CCCCCC"/>
            <!-- 圆角 -->
            <corners
                android:bottomLeftRadius="7dip" android:bottomRightRadius="7dip" android:topLeftRadius="7dip" android:topRightRadius="7dip"/>

            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" android:top="1dip"/>
        </shape>
    </item>

</selector>