<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="420dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_red_line"
    >


        <Button
            android:id="@+id/close_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/close"
            android:text="關閉"
            android:gravity="center"
            android:layout_alignParentBottom="true"
             />




    <ImageView
        android:id="@+id/dialog_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/close_photo"
        android:layout_alignLeft="@id/close_photo"
        android:layout_alignRight="@id/close_photo"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingBottom="0dp"
        android:paddingRight="3dp"
        android:scaleType="fitXY"


        />

</RelativeLayout>