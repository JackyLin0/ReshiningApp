<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fragment_showbodyheight"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".badymeasurement.ShowBodyHeightFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
            style="@style/StyleToolbar"
            android:layout_marginBottom="-8dp"/>

        <!-- Content -->
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/linearlayout_custom_bg_rec"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/new_event_btn_cancel"
                            style="@style/new_event_btn"
                            android:layout_marginEnd="0.5dp"
                            android:text="@string/add_new_cancel"
                            android:textColor="@color/white_color"
                            android:textSize="20sp"
                            android:visibility="visible"
                            tools:ignore="RtlCompat"/>

                        <Button
                            android:id="@+id/new_event_btn_commit"
                            style="@style/new_event_btn"
                            android:layout_marginStart="0.5dp"
                            android:text="@string/add_new_commit"
                            android:textColor="@color/white_color"
                            android:textSize="20sp"
                            android:visibility="visible"
                            tools:ignore="RtlCompat"/>
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/bloodpressure_body"/>

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/weight_title_edit"
                                    android:textSize="@dimen/hdpi_titlefontsize"/>

                            </LinearLayout>


                            <LinearLayout
                                style="@style/new_event_list">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    tools:ignore="RtlCompat">

                                    <ImageView
                                        android:id="@+id/iv_new_event_time"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="30dp"
                                        android:src="@mipmap/bloodglucose_time"
                                        tools:ignore="ContentDescription"/>

                                    <TextView
                                        android:id="@+id/bodyweight_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="2016-08-14 00:00:00"
                                        android:textSize="18dp"/>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    tools:ignore="RtlCompat">

                                    <ImageView
                                        android:id="@+id/updata_status_icon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="30dp"
                                        android:src="@mipmap/bloodglucose_updata_success"
                                        tools:ignore="ContentDescription"/>

                                    <TextView
                                        android:id="@+id/updata_status"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/user_upload_blood_glucose"
                                        android:textColor="#25a398"
                                        android:textSize="18dp"/>


                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                style="@style/new_event_list"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        tools:ignore="RtlCompat">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="30dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginTop="30dp"
                                            android:src="@mipmap/iv_new_event_weight"
                                            tools:ignore="ContentDescription"/>

                                        <TextView
                                            android:id="@+id/bodyweight"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="220"
                                            android:textColor="#25a398"
                                            android:textSize="20dp"
                                            android:textStyle="bold"/>

                                        <TextView
                                            android:layout_width="30dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="30dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="10dp"
                                            android:gravity="center|bottom"
                                            android:text="@string/weight_unit"
                                            android:textSize="14dp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        tools:ignore="RtlCompat">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="30dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginTop="30dp"
                                            android:src="@mipmap/iv_new_event_height"
                                            tools:ignore="ContentDescription"/>

                                        <TextView
                                            android:id="@+id/bodyheight"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="220"
                                            android:textColor="#25a398"
                                            android:textSize="20dp"
                                            android:textStyle="bold"/>

                                        <TextView
                                            android:layout_width="30dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="30dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:gravity="center|bottom|right"
                                            android:text="@string/height_unit"
                                            android:textSize="14dp"/>


                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center|right">

                                        <ImageView
                                            android:id="@+id/bodyheight_assess_icon"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/weight_smile_icon"
                                            tools:ignore="ContentDescription"/>
                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/bodyheight_assess"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"
                                        android:gravity="center"
                                        android:text="您的血糖數值維持良好\n請繼續保持喔"
                                        android:textColor="#25a398"
                                        android:textSize="15dp"/>
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                style="@style/new_event_list">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    tools:ignore="RtlCompat">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="30dp"
                                        android:src="@mipmap/neweventbackup"
                                        tools:ignore="ContentDescription"/>

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/hdpi_record_note2"
                                        android:textColor="#25a398"
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:id="@+id/bodyheight_note"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/layerlist_monthview_week_bar"
                                        android:gravity="center"
                                        android:text="@string/new_event_backup_hint"
                                        android:textColor="#25a398"
                                        android:textSize="18dp"/>

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="30dp"
                                android:background="@drawable/linearlayout_custom_addbodyheight"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="140dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center"
                                        android:text="我的理想體重："
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:id="@+id/bodyweight_ideal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="111"
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:gravity="center"
                                        android:text="@string/weight_unit_ch"
                                        android:textSize="16dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="140dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center"
                                        android:text="我的目標體重："
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:id="@+id/bodyweight_target"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="111"
                                        android:textSize="18dp"/>

                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:gravity="center"
                                        android:text="@string/weight_unit_ch"
                                        android:textSize="16dp"/>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </ScrollView>

                </LinearLayout>


            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_back"/>
    </RelativeLayout>
</FrameLayout>